<h1>閲覧</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<% n = 0 %>
<% @nearest_stations.each do |nearest_station|%>
<h3>最寄駅<%= n += 1 %></h3>
<p>
路線名:
<%= nearest_station.route %>
</p>
<p>
駅名:
<%= nearest_station.station_name %>
</p>
<p>
徒歩分数:
<%= nearest_station.walk %>
</p>
<% end %>

